{
  "server": {
    "port": 3000,
    "host": "localhost",
    "env": "development"
  },
  "database": {
    "path": "./data/funds_management.db",
    "enableWAL": true,
    "enableForeignKeys": true
  },
  "security": {
    "jwtSecret": "your-super-secret-jwt-key-change-this-in-production-minimum-32-chars",
    "jwtExpiration": "24h",
    "refreshTokenExpiration": "7d",
    "encryptionKey": "your-master-encryption-key-minimum-32-characters-long-change-in-prod",
    "rateLimitWindowMs": 900000,
    "rateLimitMaxRequests": 100
  },
  "logging": {
    "level": "info",
    "filePath": "./logs",
    "console": true,
    "file": true
  },
  "scraping": {
    "daysBack": 30,
    "futureMonths": 0,
    "maxParallelScrapers": 2,
    "timeout": 60000,
    "combineInstallments": false,
    "showBrowser": false,
    "screenshotOnError": true
  },
